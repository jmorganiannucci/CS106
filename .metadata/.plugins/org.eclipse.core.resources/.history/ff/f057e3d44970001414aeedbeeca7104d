
public class PrintNumbers {

	public static void main(String[] args) {
	recursion(10); 
	}
	
	public static void recursion(int x){
		if (x > 0){
		recursion (x-1); //wont print zero
		System.out.println(x);
		
		}
		
	}
	
	public static int countUp(int x){
		if (x > 1){ 
			return x * x + countUp(x-1);
			
		}
		return x;
		
	}

}
